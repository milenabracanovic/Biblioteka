@model Biblioteka.Models.Pozajmice

@{
    ViewBag.Title = "Edit";
}

<h2>Izmjena pozadmice</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.DisplayName("Bibliotekar")
        <dd>
            @Html.DisplayFor(model => model.AspNetUsers.Ime) @Html.DisplayFor(model => model.AspNetUsers.Prezime)
        </dd>
     
    </div>


    <div class="form-group">
        @Html.DisplayName("Clan")
        <div class="col-md-10">
            @Html.DropDownList("ClanId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ClanId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Primjerak knjige")
        <div class="col-md-10">
            @Html.DropDownList("PrimjerakKnjigeId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PrimjerakKnjigeId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Datum pozajmice")
        <div class="col-md-10">
            @Html.EditorFor(model => model.DatumPozajmice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DatumPozajmice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Datum zakazanog vracanja")
        <div class="col-md-10">
            @Html.EditorFor(model => model.DatumZakazanogVracanja, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DatumZakazanogVracanja, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Sačuvaj" class="btn btn-success" />   @Html.ActionLink("Odustani", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
